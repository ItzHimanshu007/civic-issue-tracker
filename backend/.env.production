# Production Environment Configuration
PORT=3001
NODE_ENV=production

# Database will be automatically provided by Railway PostgreSQL
# DATABASE_URL will be set automatically by Railway
# These variables will be set in Railway dashboard:
# DATABASE_URL=postgresql://user:password@host:port/database
# DB_HOST=provided_by_railway
# DB_PORT=5432
# DB_NAME=provided_by_railway  
# DB_USER=provided_by_railway
# DB_PASSWORD=provided_by_railway

# Redis Configuration (optional)
# REDIS_URL=redis://host:port

# Authentication - MUST BE CHANGED IN PRODUCTION
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Production flags
MOCK_DATA=false
SKIP_EMAIL_VERIFICATION=true
DISABLE_RATE_LIMITING=false

# Email Configuration (Update with real SMTP in production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Default email settings
DEFAULT_FROM_EMAIL=noreply@civictracker.com
DEFAULT_FROM_NAME=Civic Issue Tracker

# AWS S3 Configuration (Optional - can use Railway's file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=civic-tracker-media
AWS_REGION=us-east-1

# Job processing intervals
ESCALATION_CHECK_INTERVAL=3600000
NOTIFICATION_PROCESS_INTERVAL=300000
