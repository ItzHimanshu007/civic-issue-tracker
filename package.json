{
  "name": "civic-issue-tracker",
  "version": "1.0.0",
  "description": "Crowdsourced civic issue reporting and resolution system",
  "private": true,
  "workspaces": [
    "mobile-app",
    "backend",
    "admin-portal"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:mobile && npm run install:backend && npm run install:admin",
    "install:mobile": "cd mobile-app && npm install",
    "install:backend": "cd backend && npm install",
    "install:admin": "cd admin-portal && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:admin\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:admin": "cd admin-portal && npm run dev",
    "dev:mobile": "cd mobile-app && npm start",
    "build": "npm run build:backend && npm run build:admin",
    "build:backend": "cd backend && npm run build",
    "build:admin": "cd admin-portal && npm run build",
    "test": "npm run test:backend && npm run test:admin && npm run test:mobile",
    "test:backend": "cd backend && npm test",
    "test:admin": "cd admin-portal && npm test",
    "test:mobile": "cd mobile-app && npm test",
    "lint": "npm run lint:backend && npm run lint:admin && npm run lint:mobile",
    "lint:backend": "cd backend && npm run lint",
    "lint:admin": "cd admin-portal && npm run lint",
    "lint:mobile": "cd mobile-app && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "civic",
    "issue-tracking",
    "crowdsourced",
    "municipal",
    "react-native",
    "node.js",
    "next.js"
  ],
  "author": "Himanshu Jasoriya",
  "license": "MIT"
}
